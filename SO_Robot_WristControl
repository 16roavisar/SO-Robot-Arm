import processing.serial.*;
import cc.arduino.*;
import controlP5.*;
ControlP5 controlP5;
Arduino arduino;
int armAngle= 0;
int baseAngle = 0;
void setup() {
  size(1000,600);
  println(Arduino.list());
  arduino = new Arduino(this, Arduino.list()[1], 57600); //the number in brackets is the array location of the active serial ports listed in the view below. the first one is Zero, and it counts up from there. 
  for (int i = 0; i <= 13; i++)
  arduino.pinMode(i, Arduino.OUTPUT);
  controlP5 = new ControlP5(this);

  //I actually hate how this is handled. For some reason, it won't take an object, only a string
  //It works though
  controlP5.addSlider("armAngle",0,130,armAngle,20,10,800,200);
  controlP5.addSlider("baseAngle",0,180,baseAngle,20,300,800,200);
}

void draw() {
  arduino.analogWrite(8, armAngle);
  arduino.analogWrite(12, baseAngle);
  //delay(15);
}
