int X_STEP_PIN = 54;    //Pinout compatible with RAMPS 1.4 + a4988 driver
int X_DIR_PIN = 55;
int X_ENABLE_PIN = 38;
int X_MIN_PIN = 3;
int X_MAX_PIN = 2;

int Y_STEP_PIN = 60;
int Y_DIR_PIN  = 61;
int Y_ENABLE_PIN = 56;
int Y_MIN_PIN = 14;
int Y_MAX_PIN = 15;

import processing.serial.*;
import cc.arduino.*;
import controlP5.*;
ControlP5 controlP5;
Arduino arduino;
int stepperControl= 0;
void setup() {
  size(1000,600);
  println(Arduino.list());
  arduino = new Arduino(this, Arduino.list()[1], 57600); //the number in brackets is the array location of the active serial ports listed in the view below. the first one is Zero, and it counts up from there. 
  
  arduino.pinMode(X_STEP_PIN  , Arduino.OUTPUT);
  arduino.pinMode(X_DIR_PIN    , Arduino.OUTPUT);
  arduino.pinMode(X_ENABLE_PIN    , Arduino.OUTPUT);
  
  arduino.pinMode(Y_STEP_PIN  , Arduino.OUTPUT);
  arduino.pinMode(Y_DIR_PIN    , Arduino.OUTPUT);
  arduino.pinMode(Y_ENABLE_PIN    , Arduino.OUTPUT);

  arduino.pinMode(X_MIN_PIN   ,  Arduino.INPUT);
  arduino.pinMode(X_MAX_PIN   ,  Arduino.INPUT);
  arduino.pinMode(Y_MIN_PIN   ,  Arduino.INPUT);
  arduino.pinMode(Y_MAX_PIN   ,  Arduino.INPUT);
 
  
  arduino.digitalWrite(X_ENABLE_PIN    , Arduino.LOW);
  arduino.digitalWrite(Y_ENABLE_PIN    , Arduino.LOW);
  
  controlP5 = new ControlP5(this);

  //I actually hate how this is handled. For some reason, it won't take an object, only a string
  //It works though
  controlP5.addSlider("stepperControl",0,130,stepperControl,20,10,800,200);
}

void draw() {
  while (stepperControl < 0) {

    arduino.digitalWrite(X_DIR_PIN    , Arduino.HIGH);
    
    arduino.digitalWrite(X_STEP_PIN    , Arduino.HIGH); //HIGH followed by LOW = 1 step
    arduino.digitalWrite(Y_STEP_PIN    , Arduino.HIGH);
    
    delay(stepperControl);               // Set Speed (Lower = Faster)
    
    arduino.digitalWrite(X_STEP_PIN    , Arduino.LOW);
    arduino.digitalWrite(Y_STEP_PIN    , Arduino.LOW);

  }
  while (stepperControl > 0) {

    arduino.digitalWrite(X_DIR_PIN    , Arduino.LOW);
    
    arduino.digitalWrite(X_STEP_PIN    , Arduino.HIGH); //HIGH followed by LOW = 1 step
    arduino.digitalWrite(Y_STEP_PIN    , Arduino.HIGH);
    
    delay(stepperControl);               // Set Speed (Lower = Faster)
    
    arduino.digitalWrite(X_STEP_PIN    , Arduino.LOW);
    arduino.digitalWrite(Y_STEP_PIN    , Arduino.LOW);
  }

}
